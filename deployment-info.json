{
  "schema": "bsv-app",
  "schemaVersion": "1.0",
  "topicManagers": {
    "tm_convo": "./backend/src/topic-managers/ConvoTopicManager.ts"
  },
  "lookupServices": {
    "ls_convo": {
      "serviceFactory": "./backend/src/lookup-services/ConvoLookupServiceFactory.ts",
      "hydrateWith": "mongo"
    }
  },
  "frontend": {
    "language": "react",
    "sourceDirectory": "./frontend"
  },
  "configs": [
    {
      "name": "Local LARS",
      "network": "mainnet",
      "provider": "LARS",
      "run": [
        "backend",
        "frontend"
      ]
    },
    {
      "name": "Convo App (CARS)",
      "provider": "CARS",
      "network": "mainnet",
      "CARSCloudURL": "https://cars.babbage.systems",
      "projectID": "PROJECT-ID",
      "frontendHostingMethod": "HTTPS",
      "deploy": [
        "frontend",
        "backend"
      ]
    }
  ]
}
