{
  "name": "convo-messenger-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Overlay backend service for Convo-Messenger (ls_convo) with secure message storage and retrieval",
  "main": "dist/esm/mod.js",
  "types": "dist/types/mod.d.ts",
  "files": [
    "dist",
    "src",
    "mod.ts",
    "LICENSE.txt"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/mod.d.ts",
      "import": "./dist/esm/mod.js"
    },
    "./*.ts": {
      "types": "./dist/types/src/*.d.ts",
      "import": "./dist/esm/src/*.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/esm/index.js",
    "prepublishOnly": "npm run build",
    "test": "npm run build && jest",
    "test:watch": "npm run build && jest --watch",
    "test:coverage": "npm run build && jest --coverage",
    "lint": "ts-standard --fix src/**/*.ts",
    "doc": "ts2md --inputFilename=mod.ts --outputFilename=API.md --filenameSubstring=API --firstHeadingLevel=1"
  },
  "author": "BSV Association",
  "license": "SEE LICENSE IN LICENSE.txt",
  "dependencies": {
    "@bsv/overlay": "^0.4.1",
    "@bsv/sdk": "^1.6.16",
    "express": "^5.1.0",
    "mongodb": "^6.16.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "sass": "^1.90.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-standard": "^12.0.2",
    "ts2md": "^0.2.8",
    "tsconfig-to-dual-package": "^1.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3"
  }
}
